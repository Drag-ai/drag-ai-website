          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-cyan-400 mb-2">
              {stat.value}{stat.suffix}
            </div>
            <div class="text-gray-400 font-medium">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Problem Section -->
  <section class="section">
    <div class="container">
