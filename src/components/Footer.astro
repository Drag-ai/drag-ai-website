---
const currentYear = new Date().getFullYear();

const footerLinks = {
  company: [
    { name: 'About Us', href: '/about' },
    { name: 'Our Team', href: '/about#team' },
    { name: 'Contact', href: '/contact' },
  ],
  services: [
    { name: 'AI Strategy', href: '/services#strategy' },
    { name: 'Implementation', href: '/services#implementation' },
    { name: 'Training', href: '/services#training' },
  ],
  industries: [
    { name: 'Construction', href: '/industries/construction' },
    { name: 'Hospitality', href: '/industries/hospitality' },
    { name: 'Logistics', href: '/industries/logistics' },
    { name: 'View All', href: '/industries' },
  ],
  resources: [
    { name: 'Blog', href: '/blog' },
    { name: 'Case Studies', href: '/case-studies' },
    { name: 'Documentation', href: '/docs' },
  ],
  legal: [
    { name: 'Privacy Policy', href: '/privacy' },
    { name: 'Terms of Service', href: '/terms' },
  ],
};

const socialLinks = [
  { name: 'LinkedIn', href: 'https://www.linkedin.com/company/drag-ai/', icon: 'linkedin' },
  { name: 'Twitter', href: 'https://x.com/drag_ai', icon: 'twitter' },
];
---

<footer class="bg-gray-900 text-gray-300">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 mb-8">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <div class="flex items-center space-x-3 mb-4">
          <img src="/logo.jpg" alt="Drag-AI Logo" class="h-12 w-12 rounded-lg object-cover" />
          <div class="flex flex-col">
            <span class="text-2xl font-bold text-white">Drag-AI</span>
            <span class="text-xs text-gray-400">AI Consulting & Services</span>
          </div>
        </div>
        <p class="text-gray-400 mb-4 max-w-md">
          Transform your business with AI—no tech team required. We help companies adopt AI, ML, and Generative AI to improve operations and drive growth.
        </p>
        <div class="space-y-2">
          <p class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:+918305020077" class="hover:text-white transition-colors">+91-8305020077</a>
          </p>
          <p class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>ULF, Bellandur, Bengaluru</span>
          </p>
        </div>
      </div>

      <!-- Company Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">Company</h3>
        <ul class="space-y-2">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="hover:text-white transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">Services</h3>
        <ul class="space-y-2">
          {footerLinks.services.map((link) => (
            <li>
              <a href={link.href} class="hover:text-white transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Industries Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">Industries</h3>
        <ul class="space-y-2">
          {footerLinks.industries.map((link) => (
            <li>
              <a href={link.href} class="hover:text-white transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Security Badges -->
    <div class="border-t border-gray-800 pt-6 pb-4">
      <div class="flex flex-wrap items-center justify-center gap-6 text-sm">
        <!-- SSL Secured Badge -->
        <div class="flex items-center space-x-2 text-gray-400">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
          </svg>
          <span>SSL Secured</span>
        </div>
        
        <!-- Privacy Protected Badge -->
        <div class="flex items-center space-x-2 text-gray-400">
          <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a5 5 0 00-5 5v2a2 2 0 00-2 2v5a2 2 0 002 2h10a2 2 0 002-2v-5a2 2 0 00-2-2H7V7a3 3 0 015.905-.75 1 1 0 001.937-.5A5.002 5.002 0 0010 2z"/>
          </svg>
          <span>Privacy Protected</span>
        </div>

        <!-- HTTPS Badge -->
        <div class="flex items-center space-x-2 text-gray-400">
          <svg class="w-5 h-5 text-cyan-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>Secure Connection</span>
        </div>

        <!-- Data Protection Badge -->
        <div class="flex items-center space-x-2 text-gray-400">
          <svg class="w-5 h-5 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>Data Protected</span>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
      <p class="text-gray-400 text-sm">
        © {currentYear} Drag-AI. All rights reserved.
      </p>

      <!-- Social Links -->
      <div class="flex items-center space-x-6">
        {socialLinks.map((social) => (
          <a
            href={social.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-white transition-colors"
            aria-label={social.name}
          >
            {social.icon === 'linkedin' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            )}
            {social.icon === 'twitter' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            )}
          </a>
        ))}
      </div>

      <!-- Legal Links -->
      <div class="flex items-center space-x-4 text-sm">
        {footerLinks.legal.map((link) => (
          <a href={link.href} class="text-gray-400 hover:text-white transition-colors">
            {link.name}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>